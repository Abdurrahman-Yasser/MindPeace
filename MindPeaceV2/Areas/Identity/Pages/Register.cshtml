@page
@model MindPeaceV2.Areas.Identity.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<h2 class="card-title text-center mb-4">Register</h2>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="RInput.Username">Username</label>
        <input asp-for="RInput.Username" type="text" class="form-control" id="username" placeholder="Enter username" required>
    </div>
    <div class="form-group">
        <label asp-for="RInput.Email">Email</label>
        <input asp-for="RInput.Email" type="email" class="form-control" id="email" placeholder="Enter email" required>
    </div>
    <div class="form-group">
        <label asp-for="RInput.Password" for="password">Password</label>
        <input asp-for="RInput.Password" type="password" class="form-control" id="password" placeholder="Enter password" required>
    </div>
    <div class="form-group">
        <label asp-for="RInput.ConfirmPassword">Confirm Password</label>
        <input asp-for="RInput.ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Confirm password"
               required>
    </div>
    <label>Admin</label>
    <input type="checkbox" checked disabled />
    <button type="submit" class="btn btn-primary btn-block">Register</button>
    <div class="d-flex justify-content-between mt-3">
        <a href="login">Already have an account? Login</a>
    </div>
</form>
