@using MindPeaceV2.Data.Models

<div class="row p-3">
    <div class="col-lg-7 col-md-12 col-sm-12">
        <div class="card mb-4 shadow-sm">
            <!--Profile Section-->
            <div class="card-body d-flex">
                @if (Patient.PhotoURL is null)
                {
                    Patient.PhotoURL = "No profile.jpg";
                }
                <img src="@Patient.PhotoURL" alt="Profile Photo" class="rounded-circle mx-3" style="width: 180px; height: 180px; border:0.1px solid lightgray; bor">
                <div class="m-2">
                    <h3 class="card-title mb-1">@Patient.Name</h3>
                    <p class="card-text mb-0">@Patient.Biography</p>
                </div>
            </div>
        </div>
        <h1 class="text-center">Schedule</h1>
        <div id="calendar" class="mb-4">
            <!-- Placeholder for calendar -->
            <CalendarComponent></CalendarComponent>
        </div>
    </div>
    <div class="col-lg-5 col-md-12 col-sm-12">
        <div class="card mb-4 shadow-sm">
            <!--Details Section-->
            <div class="card-body">
                <div class="card-body">
                    <table>
                        <tr>
                            <td class="fw-bold">Name</td>
                            <td></td>
                            <td> : </td>
                            <td></td>
                            <td>@Patient.Name</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Age</td>
                            <td></td>
                            <td> : </td>
                            <td></td>
                            <td>@Patient.Age</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Gender</td>
                            <td></td>
                            <td> : </td>
                            <td></td>
                            <td>@Patient.Gender</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Depression Severit</td>
                            <td></td>
                            <td> : </td>
                            <td></td>
                            <td>@Patient.DepressionSeverity PHQ-9</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Symptoms</td>
                            <td></td>
                            <td> : </td>
                            <td></td>
                            <td>@Patient.Symptoms</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Medications</td>
                            <td></td>
                            <td> : </td>
                            <td></td>
                            <td>@Patient.Medications</td>
                        </tr>
                    </table>
                    <a target="_blank" href="https://screening.mhanational.org/screening-tools/depression/" class="btn btn-success mt-3 shadow-none border-0" style="width:100%; background-color:darkcyan">Take Test</a>
                </div>
            </div>
        </div>
        <!--Doctors List-->
        <div class="card mb-4 shadow-sm">
            <div class="card-header" style="background-color:darkcyan;"><h5 class="text-light">Our Therapists</h5></div>
            <div class="card-body">
                <div style="max-height:525px; overflow-y: auto;">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item border-0"><button>Dr. John Smith</button></li>
                        <li class="list-group-item border-0"><button>Dr. Emily Johnson</button></li>
                        <li class="list-group-item border-0"><button>Dr. Michael Brown</button></li>
                        <li class="list-group-item border-0"><button>Dr. Sarah Davis</button></li>
                        <li class="list-group-item border-0"><button>Dr. David Wilson</button></li>
                        <li class="list-group-item border-0"><button>Dr. Jessica Martinez</button></li>
                        <li class="list-group-item border-0"><button>Dr. Christopher Anderson</button></li>
                        <li class="list-group-item border-0"><button>Dr. Amanda Thomas</button></li>
                        <li class="list-group-item border-0"><button>Dr. Joshua Taylor</button></li>
                        <li class="list-group-item border-0"><button>Dr. Jennifer Moore</button></li>
                        <li class="list-group-item border-0"><button>Dr. Matthew Jackson</button></li>
                        <li class="list-group-item border-0"><button>Dr. Elizabeth White</button></li>
                        <li class="list-group-item border-0"><button>Dr. Daniel Harris</button></li>
                        <li class="list-group-item border-0"><button>Dr. Patricia Clark</button></li>
                        <li class="list-group-item border-0"><button>Dr. Andrew Lewis</button></li>
                        <li class="list-group-item border-0"><button>Dr. Megan Lee</button></li>
                        <li class="list-group-item border-0"><button>Dr. Benjamin Walker</button></li>
                        <li class="list-group-item border-0"><button>Dr. Laura Hall</button></li>
                        <li class="list-group-item border-0"><button>Dr. Joseph Allen</button></li>
                        <li class="list-group-item border-0"><button>Dr. Angela Young</button></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .list-group-item button {
        color: #000; /* Default color */
        background: none;
        border: none;
        text-decoration: none;
    }

        .list-group-item button:hover {
            color: #007bff; /* Color on hover */
        }
</style>

@code {
    [Parameter]
    public Patient? Patient { get; set; }
}
