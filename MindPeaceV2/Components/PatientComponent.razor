@using MindPeaceV2.Data.Models

<div class="row p-3">
    <div class="col-lg-8 col-md-8 col-sm-12">
        <div class="card mb-4 shadow-sm">
            <!--Profile Section-->
            <div class="card-body d-flex">
                @if (Patient.PhotoURL is null)
                {
                    Patient.PhotoURL = "No profile.jpg";
                }
                <img src="@Patient.PhotoURL" alt="Profile Photo" class="rounded-circle mx-3" style="width: 180px; height: 180px; border:0.1px solid lightgray; bor">
                <div class="m-2">
                    <h3 class="card-title mb-1">@Patient.Name</h3>
                    <p class="card-text mb-0">@Patient.Biography</p>
                </div>
            </div>
        </div>
        <h1 class="text-center">Schedule</h1>
        <div id="calendar" class="mb-4">
            <!-- Placeholder for calendar -->
            <CalendarComponent></CalendarComponent>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-12">
        <div class="card mb-4 shadow-sm">
            <!--Details Section-->
            <div class="card-body">
                <div class="card-body">
                    <table>
                        <tr>
                            <td class="fw-bold">Name</td>
                            <td></td>
                            <td> : </td>
                            <td></td>
                            <td>@Patient.Name</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Age</td>
                            <td></td>
                            <td> : </td>
                            <td></td>
                            <td>@Patient.Age</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Gender</td>
                            <td></td>
                            <td> : </td>
                            <td></td>
                            <td>@Patient.Gender</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Depression Severit</td>
                            <td></td>
                            <td> : </td>
                            <td></td>
                            <td>@Patient.DepressionSeverity PHQ-9</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Symptoms</td>
                            <td></td>
                            <td> : </td>
                            <td></td>
                            <td>@Patient.Symptoms</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Medications</td>
                            <td></td>
                            <td> : </td>
                            <td></td>
                            <td>@Patient.Medications</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <!--Doctors List-->
        <div class="card mb-4 shadow-sm">
            <div class="card-header" style="background-color:darkcyan;"><h5 class="text-light">Our Therapists</h5></div>
            <div class="card-body">
                <div style="max-height:525px; overflow-y: auto;">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item border-0">Dr. John Smith</li>
                        <li class="list-group-item border-0">Dr. Emily Johnson</li>
                        <li class="list-group-item border-0">Dr. Michael Brown</li>
                        <li class="list-group-item border-0">Dr. Sarah Davis</li>
                        <li class="list-group-item border-0">Dr. David Wilson</li>
                        <li class="list-group-item border-0">Dr. Jessica Martinez</li>
                        <li class="list-group-item border-0">Dr. Christopher Anderson</li>
                        <li class="list-group-item border-0">Dr. Amanda Thomas</li>
                        <li class="list-group-item border-0">Dr. Joshua Taylor</li>
                        <li class="list-group-item border-0">Dr. Jennifer Moore</li>
                        <li class="list-group-item border-0">Dr. Matthew Jackson</li>
                        <li class="list-group-item border-0">Dr. Elizabeth White</li>
                        <li class="list-group-item border-0">Dr. Daniel Harris</li>
                        <li class="list-group-item border-0">Dr. Patricia Clark</li>
                        <li class="list-group-item border-0">Dr. Andrew Lewis</li>
                        <li class="list-group-item border-0">Dr. Megan Lee</li>
                        <li class="list-group-item border-0">Dr. Benjamin Walker</li>
                        <li class="list-group-item border-0">Dr. Laura Hall</li>
                        <li class="list-group-item border-0">Dr. Joseph Allen</li>
                        <li class="list-group-item border-0">Dr. Angela Young</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Patient? Patient { get; set; }
}
